{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "vitest/importMeta",
    ],
    "outDir": "./dist",
    "baseUrl": "."
  },
  "exclude": ["node_modules"],
  "include": ["lib/**/*"],
}
